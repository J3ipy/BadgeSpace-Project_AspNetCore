@model BadgeSpace.Domain.Entities.User.UserModel
@{
    ViewData["Title"] = "Gerenciar email";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="email-form" asp-action="ChangeEmail" method="post">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" disabled />
                <label asp-for="Email" class="form-label"></label>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br>
            <button id="change-email-button" type="submit" class="w-100 btn btn-lg btn-primary" style="text-transform: capitalize;">Trocar de email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
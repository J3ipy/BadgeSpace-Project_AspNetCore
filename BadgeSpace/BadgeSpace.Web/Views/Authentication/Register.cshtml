@model BadgeSpace.Web.Models.User.UserRegisterViewModel
@{
    ViewData["Title"] = "Registrar";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/responsivo.css">
</head>
<body>

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55);backdrop-filter: blur(30px); margin-right:-50px;">
                        <div id="card" class="card-body p-5 shadow-5">
                            <h2 class="fw-bold mb-5">Registrar-se</h2>
                            <form asp-action="Register" method="post">
                                <h2>Criar uma nova conta</h2>
                                <hr />
                                <div class="text-danger"></div>
                                <div class="form-check form-switch">
                                    <input asp-for="Claim" class="form-check-input" type="checkbox" id="Switch">
                                    <label asp-for="Claim" id="check" class="form-check-label"></label>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" autocomplete="username" />
                                    <label class="form-label" id="label" asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label class="form-label" id="label" asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label class="form-label" id="label" asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label class="form-label" id="label" asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <br>
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-outline-primary">Cadastrar-se</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="~/assets/images/Register.jpg" class="w-100 rounded-4 shadow-4"
                         alt="" id="imagem" />
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</html>
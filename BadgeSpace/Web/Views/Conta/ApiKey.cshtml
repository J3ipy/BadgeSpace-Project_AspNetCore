@model Domain_Driven_Design.Domain.Argumentos.Usuario.Requests.UsuarioToken
@{
    ViewData["Title"] = "Gerenciar Chave API";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="ApiKey-form" asp-action="ChangeToken" method="post">
            <div class="form-floating input-group">
                    <input asp-for="Token"  class="form-control" disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                <label asp-for="Token" class="form-label"></label>
                <button type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top: 0.4em; text-transform: capitalize;">Mudar Token</button>
            </div>
        </form>
    </div>
</div>

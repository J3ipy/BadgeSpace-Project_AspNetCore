@model IEnumerable<Domain.Argumentos.Estudante.EstudanteResponse>

@{
    ViewData["Title"] = "Index";
}

<h1>Sistema - BadgeSpace</h1>
<hr />

<div class="container text-end">
    <a class="btn btn-primary btn-sm" asp-action="Create" style="text-transform: capitalize;">Adicionar um Novo Badge</a>
</div>
<br>
<div class="row gap-3 justify-content-start">
    @foreach (var item in Model)
    {
        var img = $"data:image/gif;base64,{Convert.ToBase64String(item.Imagem!)}";
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0 justify-content-center align-items-center">
                <div class="col-md-4">
                    <img src="@img" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text"><small class="text-muted">Última atualização em @item.DataAlteracao</small></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex"><strong style="margin-right: 4px;">Curso: </strong> @item.Curso
                        </li>
                        <li class="list-group-item d-flex"><strong style="margin-right: 4px;">CPF: </strong> @item.CPF
                        </li>
                        <li class="list-group-item "><strong style="margin-right:1px;">Código: </strong> @item.Codigo</li>
                        <li class="list-group-item" style="margin-top: 1em; margin-bottom: 1em;">
                            <div class="container-fluid text-center">
                                <div class="row">
                                    <div class="col-3" style="margin-right: 4.5px;">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                        class="btn btn-primary">Editar</a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                        class="btn btn-info text-white">Detalhes</a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                        class="btn btn-danger">Deletar</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@model IEnumerable<BadgeSpace.Models.StudentModel>
@{
    ViewData["Title"] = "Dashboard";
}
<div>
    <h4>Dashboard</h4>
    <hr />
    <dl class="row">
        <dt>Badges</dt>
        <dd class="col-sm-10">
            @foreach (var item in Model)
                {
                    if (item.AlunoCPF == ViewBag.CPF)
                    {
                        if (item.Imagem != null)
                        {
                            var base64 = Convert.ToBase64String(item.Imagem);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <a href="#" data-bs-toggle="modal" data-bs-target="#sitemodal"><img src='@imgSrc' style="max-width:300px; max-height:300px;" /></a>
                        }
                    }
                }
        </dd>
    </dl>
</div>



<div class="modal" id="sitemodal" tabindex="1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @foreach (var item in Model){
                    if (item.AlunoCPF == ViewBag.CPF){
                        <h5 class="modal-title fs-5">@item.Curso</h5>
                    }
                }
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @foreach (var item in Model)
                {
                    if (item.AlunoCPF == ViewBag.CPF)
                    {
                        if (item.Imagem != null)
                        {
                            var base64 = Convert.ToBase64String(item.Imagem);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <a href="#" data-toggle="modal" data-target="#sitemodal"><img class="col-md-4" src='@imgSrc' style="max-width:400px; max-height:400px;" /></a>
                        }
                        
                        <div class="col-md-4">
                           <h4>Nome do aluno: </h4><h5>@item.NomeAluno</h5>
                        </div>
                        <div class="col-md-3 ms-auto">
                            <h4>Descrição: </h4<h5>@item.Descricao</h5>
                        </div>

                        <div class="row">
                        <div class="col-sm-9">
                            <h5>Tipo do Curso:</h5> <h5>@item.Tipo</h5>
                            <div class="row">
                            <div class="col-8 col-sm-6">
                               <h5>Duração do Curso:</h5> <h5>@item.Tempo</h5>
                            </div>
                            <br>
                            <div class="col-4 col-sm-6">
                              <h5>Nível do Curso:</h5>  <h5>@item.Nivel</h5>
                            </div>
                            </div>
                        </div>
                        </div>
                         <h5>Habilidades:</h5>  <h5>@item.Habilidades</h5>
                        
                    }
                }
            </div>
        </div>
    </div>
</div>

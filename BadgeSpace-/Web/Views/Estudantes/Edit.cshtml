@model Domain_Driven_Design.Domain.Argumentos.Estudante.EstudanteRequest

@{
    ViewData["Title"] = "Edit";
    var tempo = Model.DataAlteracao ?? Model.DataInclusao;
    var imagem = $"data:image/gif;base64,{Convert.ToBase64String(Model.Imagem!)}";
}

<h1>Editar</h1>
<span>Última alteração: @tempo.Year / @tempo.Month / @tempo.Day às @tempo.Hour : @tempo.Minute</span>
<br>
<h4>BadgeSpace</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input asp-for="Nivel" class="form-control" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Tempo" class="control-label"></label>
                <input asp-for="Tempo" class="form-control" />
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <img src="@imagem"/>
                <input type="file" value="@Model.Imagem" accept="image/png" asp-for="Imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Save" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
     <a asp-action="Index" class="btn"><i class="ri-arrow-left-line"></i> Voltar para lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
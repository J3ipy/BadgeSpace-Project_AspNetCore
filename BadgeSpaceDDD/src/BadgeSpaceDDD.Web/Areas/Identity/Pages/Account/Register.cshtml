@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>

    <!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px); margin-right:-50px;
            ">
          <div class="card-body p-5 shadow-5">
            <h2 class="fw-bold mb-5">Registrar-se</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Criar uma nova conta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check form-switch">
                <input asp-for="Input.Empresa" class="form-check-input" type="checkbox" id="Switch">
                <label asp-for="Input.Empresa" class="form-check-label">Usuário / Empresa</label>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.CPF" class="form-control" autocomplete="CPF" id="CPF" maxlength="14" required />
                <label id="labelcpf" asp-for="Input.CPF"></label>
                <span id="spancpf" asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-outline-primary">Registrar</button>
        </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="~/assets/images/Register.jpg" class="w-100 rounded-4 shadow-4"
          alt="" id="imagem"/>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    
</body>
</html>
@model IEnumerable<Web.Models.StudentModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Sistema - BadgeSpace</h1>

<p>
    <a asp-action="Create">Adicionar um Novo Badge</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlunoCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tempo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habilidades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { 
    <tr>
       @{
           var img = $"data:image/gif;base64,{Convert.ToBase64String(item.Imagem!)}";
        }
        <td>
            @Html.DisplayFor(modelItem => item.NomeAluno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlunoCPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nivel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tempo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <img src=@img style="max-width:100px; max-height:100px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Habilidades)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
            <br>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
            <br>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
        </td>
    </tr>
}
    </tbody>
</table>

@model IEnumerable<Web.Models.StudentModel>
@{
    var modal = "Modal";
}   
@{
    ViewData["Title"] = "Dashboard";
}
<div>
    <h4>Dashboard</h4>
    <hr />
    <dl class="row">
        <dt>Badges</dt>
        <dd class="col-sm-10">
            @foreach (var item in Model)
            {
                var img = $"data:image/gif;base64,{Convert.ToBase64String(item.Imagem!)}";
                <a href="#" data-bs-toggle="modal" data-bs-target='#@modal@item.Codigo'><img src='@img' style="max-width:300px; max-height:300px;" /></a>
            }
        </dd>
    </dl>
</div>

@foreach (var item in Model){
    <div class="modal fade" id="@modal@item.Codigo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                        <h5 class="modal-title fs-5" style="font-weight: 600">@item.Curso</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-0 container-sm">
                        @{var img = $"data:image/gif;base64,{Convert.ToBase64String(item.Imagem!)}";}
                        <a href="#" data-toggle="modal" data-target="#sitemodal"><img class="col-md-4" src='@img' style="max-width:400px; max-height:400px;" /></a>

                        <div class="container text-center">   
                            <div class="row">
                                <div class="col">
                                    <h4>Nome do aluno: </h4><h5>@item.NomeAluno</h5>
                                </div>
                                <div class="col"><h4>Código: </h4><h5>@item.Codigo</h5></div>
                            </div>
                        </div>
                        <br>
                        <div class="ms-auto">
                            <h4>Descrição: </h4><h5>@item.Descricao</h5>
                        </div>
                        <br>

                        <div class="row">
                        <div class="col-sm-9">
                            <h5>Tipo do Curso:</h5> <h5>@item.Tipo</h5>
                            <div class="row">
                            <div class="col-8 col-sm-6">
                                <h5>Duração do Curso:</h5> <h5>@item.Tempo</h5>
                            </div>
                            <br>
                            <div class="col-4 col-sm-6">
                                <h5>Nível do Curso:</h5>  <h5>@item.Nivel</h5>
                            </div>
                            </div>
                        </div>
                        </div>
                            <h5>Habilidades:</h5>  <h5>@item.Habilidades</h5>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="modalcenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content rounded-0">
          <div class="modal-body py-0">

            
            <div class="d-flex main-content">
              <div class="bg-image promo-img mr-3" style="background-image: url('~/assets/images/img_1.jpg');">
                <span class="price">$2000</span>
              </div>
              <div class="content-text p-4 px-5 align-item-stretch">    
                <div class="text-center">
                    <a href="#" class="share"><span class="icon-share"></span></a>
                    <h3 class="mb-3 line">Grand Prix 4000</h3>
                    <p class="mb-3">
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star"></span>
                    </p>

                    <p class="mb-5">All their equipment and instruments are alive. The sky was this is cloudless and of a deep dark blue. A shining crescent far beneath the flying vessel.</p>

                    <div class="d-flex text-center social w-50 mx-auto">

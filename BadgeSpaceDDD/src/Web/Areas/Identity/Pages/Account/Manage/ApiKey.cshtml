@page
@model ApiKeyModel
@{
    ViewData["Title"] = "Gerenciar Chave API";
    ViewData["ActivePage"] = ManageNavPages.ApiKey;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="ApiKey-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating input-group">
                    <input asp-for="APIKey"  class="form-control" disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                <label asp-for="APIKey" class="form-label"></label>
                <button type="submit" asp-page-handler="ChangeToken" class="w-100 btn btn-lg btn-primary" style="margin-top: 0.4em; text-transform: capitalize;">Mudar Token</button>
            </div>
        </form>
            
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
